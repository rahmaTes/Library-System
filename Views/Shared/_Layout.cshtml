<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Memorial Books</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- style css -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <!-- Responsive-->
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.min.css" asp-append-version="true">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <style>
        /* Custom hover effects */
        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.2); /* Light white background */
            color: white; /* Maintain white text color */
        }
    </style>
</head>

<body class="main-layout home_page">

    <header>
        <!-- header inner -->
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo"> <a asp-area="" asp-controller="Home" asp-action="Index"><img src="/assets/logo.png" alt="#"></a> </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <div class="menu-area">
                            <div class="limit-box">
                                <nav class="navbar navbar-expand-lg navbar-light">
                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                        <span class="navbar-toggler-icon"></span>
                                    </button>
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                        <ul class="navbar-nav mr-auto">
                                            <li class="nav-item ">
                                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "text-pink" : "text-white") h5" asp-controller="Home" asp-action="Index">Home</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link text-white h5" asp-controller="Home" asp-action="Index" onclick="location.href='@Url.Action("Index", "Home")#about'; return false;">About Us</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link text-white h5" asp-controller="Home" asp-action="Index" onclick="location.href='@Url.Action("Index", "Home")#Library'; return false;">Library</a>
                                            </li>

                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <li class="nav-item ">
                                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "GetAll" && ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ||ViewContext.RouteData.Values["action"]?.ToString() == "Search" && ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "text-pink" : "text-white") h5 " asp-area="" asp-controller="Category" asp-action="GetAll">OUR BOOKS</a>
                                                </li>
                                                
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link dropdown-toggle @((ViewContext.RouteData.Values["action"]?.ToString() == "Update" && ViewContext.RouteData.Values["controller"]?.ToString() == "Book")||(ViewContext.RouteData.Values["action"]?.ToString() == "Edit" && ViewContext.RouteData.Values["controller"]?.ToString() == "Category")||(ViewContext.RouteData.Values["action"]?.ToString() == "Search" && ViewContext.RouteData.Values["controller"]?.ToString() == "Category")||(ViewContext.RouteData.Values["action"]?.ToString() == "Add" && ViewContext.RouteData.Values["controller"]?.ToString() == "Category")||(ViewContext.RouteData.Values["action"]?.ToString() == "AddRole" && ViewContext.RouteData.Values["controller"]?.ToString() == "Role") || (ViewContext.RouteData.Values["action"]?.ToString() == "Add" && ViewContext.RouteData.Values["controller"]?.ToString() == "Book") || (ViewContext.RouteData.Values["action"]?.ToString() == "RoleRegister" && ViewContext.RouteData.Values["controller"]?.ToString() == "Account") || (ViewContext.RouteData.Values["action"]?.ToString() == "GetCheckoutsAdmin" && ViewContext.RouteData.Values["controller"]?.ToString() == "Account") || (ViewContext.RouteData.Values["action"]?.ToString() == "AddRole" && ViewContext.RouteData.Values["controller"]?.ToString() == "Role") || (ViewContext.RouteData.Values["action"]?.ToString() == "Add" && ViewContext.RouteData.Values["controller"]?.ToString() == "Book") || (ViewContext.RouteData.Values["action"]?.ToString() == "GetAllCheckouts" && ViewContext.RouteData.Values["controller"]?.ToString() == "Account")? " text-pink" : "text-white" ) h5" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            Admin Actions
                                                        </a>
                                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">                                                           
                                                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Role" asp-action="AddRole">Add Role</a>
                                                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Book" asp-action="Add">Add Book</a>
                                                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Category" asp-action="Add">Add Category</a>
                                                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="RoleRegister">Register Role</a>
                                                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="GetCheckoutsAdmin">Checkouts</a>
                                                           
                                                        </div>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="nav-item dropdown">
                                                        <a class="nav-link dropdown-toggle @((ViewContext.RouteData.Values["action"]?.ToString() == "GetAllCheckouts" && ViewContext.RouteData.Values["controller"]?.ToString() == "Account")||(ViewContext.RouteData.Values["action"]?.ToString() == "GetComments" && ViewContext.RouteData.Values["controller"]?.ToString() == "Comment" )? "text-pink" : "text-white" ) h5" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            Other
                                                        </a>
                                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                           
                                                                <a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="GetAllCheckouts">Checkouts</a>
                                                            <a class="dropdown-item text-dark" asp-area="" asp-controller="Comment" asp-action="GetComments">My Comments</a>

                                                            
                                                        </div>
                                                    </li>
                                                }
                                                
                                                <li class="nav-item mean-last">
                                                    <a class="nav-link text-white h5" asp-area="" asp-controller="Account" asp-action="SignOut"><img src="/assets/top-icon.png" alt="#" />Sign Out</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="nav-item">
                                                    <a class="nav-link text-white h5" asp-controller="Home" asp-action="Index" onclick="location.href='@Url.Action("Index", "Home")#Books'; return false;">OUR BOOKS</a>
                                                </li>
                                                <li class="nav-item ">
                                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Register" && ViewContext.RouteData.Values["controller"]?.ToString() == "Account" ? "text-pink" : "text-white") h5" asp-area="" asp-controller="Account" asp-action="Register"><img src="/assets/top-icon.png" alt="#" />Register</a>
                                                </li>
                                                <li class="nav-item ">
                                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" && ViewContext.RouteData.Values["controller"]?.ToString() == "Account" ? "text-pink" : "text-white") h5" asp-area="" asp-controller="Account" asp-action="Login"><img src="/assets/top-icon.png" alt="#" />Login</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end header inner -->
    </header>
    <!-- end header -->
    @RenderBody()

    <!-- footer -->
    <footer>
        <div class="copyright">
            <div class="container">
                <p>Copyright 2024 © Memorial</p>
            </div>
        </div>
    </footer>
    <!-- end footer -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
