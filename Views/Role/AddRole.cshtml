
@{
    ViewData["Title"] = "AddRole";
}

@model RoleViewModel

<section class="slider_section">
    <br> <br> <br> <br> <br>  <br>
</section>

<div class="container">
    <main role="main" class="pb-3">
        <h1 class="text-center">Add New Role</h1>
        <h4 class="text-secondary">Role Details</h4>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="SaveRole" asp-controller="Role">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Role Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter role name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add Role" class="btn btn-success btn-lg" />
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to List</a>
        </div>
    </main>
</div>

<section class="slider_section">
    <br> <br> <br> <br> <br>  <br>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
