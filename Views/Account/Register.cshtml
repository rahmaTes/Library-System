@model Library_Managemnt_System.ViewModel.RegisterUser

@{
    ViewData["Title"] = "Register";
}
<section class="slider_section">
    <br> <br> <br> <br> <br> <br> <br> <br>
</section>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
            <div class="bg-white p-4 p-md-5 rounded-lg shadow-lg">
                <div class="row">
                    <div class="col-12">
                        <div class="text-center mb-5">
                            <img src="\assets\1.png" width="250" height="200">
                            <h2 class="display-7 fw-bold text-center">Registration</h2>
                        </div>
                    </div>
                </div>
                <form asp-action="Register">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row gy-3 gy-md-4 overflow-hidden">
                        <div class="col-12">
                            <label asp-for="UserName" class="control-label"><span class="text-danger">*</span>User name</label>
                            <input asp-for="UserName" class="form-control border border-dark rounded-3" placeholder="User name" required />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Email" class="control-label"><span class="text-danger">*</span>Email</label>
                            <input asp-for="Email" class="form-control border border-dark rounded-3" placeholder="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Password" class="control-label"><span class="text-danger">*</span>Password</label>
                            <input asp-for="Password" class="form-control border border-dark rounded-3" placeholder="Password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ConfirmPassword" class="control-label"><span class="text-danger">*</span>Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control border border-dark rounded-3" placeholder="Confirm Password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="PhoneNumber" class="control-label"><span class="text-danger">*</span>Phone</label>
                            <input asp-for="PhoneNumber" class="form-control border border-dark rounded-3" placeholder="Phone" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="d-grid">
                                <input type="submit" value="Sign up" class="btn btn-lg btn-dark" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-12">
                        <hr class="mt-5 mb-4 border-secondary-subtle">
                        <p class="m-0 text-secondary text-center">Already have an account? <a href="/Account/Login" class="link-primary text-decoration-none">Sign in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
